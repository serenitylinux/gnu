# vim: ft=sh
name="findutils"
iteration="3"
version="4.4.2"
desc="GNU utilities to locate files"
bdeps=('gnu-build-tools')
deps=('libc')
flags=('-doc' '+locale')

function configure() {
	default
}

function build() {
	default
}

function installpkg() {
	default

	if ( ! $flag_doc ); then
		rm -rf ${dest_dir}/usr/share/info
		rm -rf ${dest_dir}/usr/share/man
	fi
	if ( ! $flag_locale ); then
		rm -rf ${dest_dir}/usr/share/locale
	fi
}
