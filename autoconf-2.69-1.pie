function installpkg() {
	default
  # license exception
  install -Dm644 COPYING.EXCEPTION \
    $dest_dir/usr/share/licenses/autoconf/COPYING.EXCEPTION

  # conflict with bintuils
  rm -f ${dest_dir}/usr/share/info/standards.info
}
