# vim: ft=sh
name="autoconf"
iteration="1"
version="2.69"
desc="A GNU tool for automatically configuring source code"
url="http://www.gnu.org/software/autoconf"
src="http://mirror.clarkson.edu/gnu/$name/$name-$version.tar.xz"
bdeps="gawk m4 bash"
deps="$bdeps"
arch="any"
flags=""
srcdir="$name-$version"


