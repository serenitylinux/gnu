# vim: ft=sh
name="tar"
iteration="3"
version="1.27"
desc="Utility used to store, backup, and transport files"
bdeps=('gnu-build-tools')
deps=('libc' 'acl' 'attr')
flags=('-doc' '+locale')


function configure() {
	./configure --prefix=/usr --libexecdir=/usr/lib/tar
}

function build() {
	default
}

function installpkg() {
	default

	if ( ! $flag_doc ); then
		rm -rf ${dest_dir}/usr/share/info
	fi
	if ( ! $flag_locale ); then
		rm -rf ${dest_dir}/usr/share/locale
	fi
}
