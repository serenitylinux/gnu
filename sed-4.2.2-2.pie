# vim: ft=sh
name="sed"
iteration="2"
version="4.2.2"
desc="GNU stream editor"
bdeps=('acl(+dev)' 'attr(+dev)' 'libc(+dev)')
deps=('acl' 'attr' 'libc')
flags=('-doc' '+locale')


function configure() {
	default
}

function build() {
	default
}

function installpkg() {
	default
	
	if ( ! $flag_doc ); then
		rm -rf ${dest_dir}/usr/share/info
		rm -rf ${dest_dir}/usr/share/man
	fi

	if ( ! $flag_locale ); then
		rm -rf ${dest_dir}/usr/share/locale
	fi
}
