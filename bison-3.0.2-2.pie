# vim: ft=sh
name="bison"
iteration="2"
version="3.0.2"
desc="The GNU general-purpose parser generator"
bdeps=('libc(+dev)' 'm4')
deps=('libc')
flags=('-doc' '+locale')


function configure() {
	default
}

function build() {
	default
}

function installpkg() {
	default

	if ( ! $flag_doc ); then
		rm -rf ${dest_dir}/usr/share/info
		rm -rf ${dest_dir}/usr/share/man
	fi

	if ( ! $flag_locale ); then
		rm -rf ${dest_dir}/usr/share/locale
	fi

}
