# vim: ft=sh
name="less"
iteration="2"
version="451"
desc="Program to view files"
bdeps=('ncurses(+dev)' 'pcre(+dev)' 'libc(+dev)')
deps=('ncurses' 'pcre' 'libc')
flags=('-doc')


function configure() {
	./configure --prefix=/usr --sysconfdir=/etc --with-regex=pcre
}

function build() {
	default
}

function installpkg() {
	default

	if ( ! $flag_doc ); then
		rm -rf ${dest_dir}/usr/share/man
	fi
}
